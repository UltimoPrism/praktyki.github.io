{
  "openapi": "3.0.3",
  "info": {
    "title": "API Ubezpieczenia",
    "version": "0.0.1"
  },
  "paths": {
    "/ubezpieczenia": {
      "post": {
        "summary": "Dodaj nowy wniosek ubezpieczeniowy",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/wniosek"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Wniosek został zapisany"
          }
        }
      }
    },
    "/slowniki/warianty": {
      "get": {
        "summary": "Pobierz listę wariantów ubezpieczenia",
        "responses": {
          "200": {
            "description": "Lista wariantów",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WariantyResponse"
                }
              }
            }
          },
          "404": {
            "description": "Błąd",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DefaultResponse"
                }
              }
            }
          }
        }
      }
    },
    "/slowniki/typy-wycieczek": {
      "get": {
        "summary": "Pobierz typy wycieczek",
        "responses": {
          "200": {
            "description": "Lista typów wycieczek",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TypyWycieczekResponse"
                }
              }
            }
          },
          "404": {
            "description": "Błąd",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DefaultResponse"
                }
              }
            }
          }
        }
      }
    },
    "/slowniki/waluty": {
      "get": {
        "summary": "Pobierz dostępne waluty",
        "responses": {
          "200": {
            "description": "Lista walut",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WalutyResponse"
                }
              }
            }
          },
          "404": {
            "description": "Błąd",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DefaultResponse"
                }
              }
            }
          }
        }
      }
    },
    "/slowniki/rodzaje-dojazdu": {
      "get": {
        "summary": "Pobierz rodzaje dojazdu",
        "responses": {
          "200": {
            "description": "Lista rodzajów dojazdu",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RodzajeDojazduResponse"
                }
              }
            }
          },
          "404": {
            "description": "Błąd",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DefaultResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DefaultResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "OK"
          },
          "messages": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "Przykładowa treść komunikatu"
            }
          }
        }
      },
      "WariantUbezpieczenia": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "example": "NNW24_1"
          },
          "name": {
            "type": "string",
            "example": "Ubezpieczenie od Następstw nieszczęśliwych wypadków."
          }
        }
      },
      "WariantyResponse": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "options": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/WariantUbezpieczenia"
                }
              }
            }
          },
          {
            "$ref": "#/components/schemas/DefaultResponse"
          }
        ]
      },
      "TypWycieczki": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "example": "P"
          },
          "name": {
            "type": "string",
            "example": "Wycieczka pobytowa"
          }
        }
      },
      "TypyWycieczekResponse": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "options": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/TypWycieczki"
                }
              }
            }
          },
          {
            "$ref": "#/components/schemas/DefaultResponse"
          }
        ]
      },
      "Waluta": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "example": "PLN"
          },
          "name": {
            "type": "string",
            "example": "Polski złoty"
          }
        }
      },
      "WalutyResponse": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "options": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Waluta"
                }
              }
            }
          },
          {
            "$ref": "#/components/schemas/DefaultResponse"
          }
        ]
      },
      "RodzajDojazdu": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "example": "Z"
          },
          "name": {
            "type": "string",
            "example": "Dojazd zorganizowany"
          }
        }
      },
      "RodzajeDojazduResponse": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "options": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/RodzajDojazdu"
                }
              }
            }
          },
          {
            "$ref": "#/components/schemas/DefaultResponse"
          }
        ]
      },
      "wniosek": {
        "type": "object",
        "required": [
          "osoby",
          "wariant",
          "krajDocelowy",
          "typWycieczki",
          "dataImprezyOd",
          "dataImprezyDo"
        ],
        "properties": {
          "osoby": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "imie",
                "nazwisko"
              ],
              "properties": {
                "imie": {
                  "type": "string"
                },
                "nazwisko": {
                  "type": "string"
                },
                "dataUrodzenia": {
                  "type": "string",
                  "format": "date"
                },
                "pesel": {
                  "type": "string"
                },
                "ulica": {
                  "type": "string"
                },
                "nrDomu": {
                  "type": "string"
                },
                "nrMieszkania": {
                  "type": "string"
                },
                "kodPocztowy": {
                  "type": "string"
                },
                "miasto": {
                  "type": "string"
                },
                "telefon": {
                  "type": "string"
                }
              }
            }
          },
          "wariant": {
            "type": "string",
            "description": "Kod wariantu ubezpieczenia. Wartość z /slowniki/warianty",
            "example": "NNW24_1"
          },
          "numerWycieczki": {
            "type": "string"
          },
          "krajDocelowy": {
            "type": "string"
          },
          "typWycieczki": {
            "type": "string",
            "description": "Kod typu wycieczki. Wartość z /slowniki/typy-wycieczek"
          },
          "dataZawarciaUmowyLubZaliczki": {
            "type": "string",
            "format": "date"
          },
          "dataWykupieniaUbezpieczenia": {
            "type": "string",
            "format": "date"
          },
          "dataImprezyOd": {
            "type": "string",
            "format": "date"
          },
          "dataImprezyDo": {
            "type": "string",
            "format": "date"
          },
          "cenaImprezy": {
            "type": "number",
            "format": "float"
          },
          "walutaCenyImprezy": {
            "type": "string",
            "description": "Kod waluty. Wartość z /slowniki/waluty"
          },
          "rodzajDojazdu": {
            "type": "string",
            "description": "Kod rodzaju dojazdu. Wartość z /slowniki/rodzaje-dojazdu"
          },
          "numerRezerwacji": {
            "type": "integer"
          }
        }
      }
    }
  }
}
